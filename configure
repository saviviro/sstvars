#!/bin/sh

# Detect the operating system
OS=$(uname -s)
echo "Operating System detected: $OS"

# Only create Makevars for Linux
if [ "$OS" = "Linux" ]; then
    echo "Generating src/Makevars file for Linux..."
  mkdir -p src
  cat > src/Makevars <<'EOF'
# Preserve any CRAN/user-provided flags (portable; no GNU '+=')
PKG_CXXFLAGS = $(PKG_CXXFLAGS) $(SHLIB_OPENMP_CXXFLAGS)
PKG_CPPFLAGS = $(PKG_CPPFLAGS) -DARMA_USE_CURRENT
PKG_LIBS     = $(PKG_LIBS) $(SHLIB_OPENMP_CXXFLAGS) $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)
EOF

  echo "Contents of src/Makevars:"
  cat src/Makevars
else
  echo "No action needed for macOS."
fi

echo "configure script completed."
